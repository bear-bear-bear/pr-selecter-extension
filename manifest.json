{
  "manifest_version": 3,
  "name": "PR selector",
  "description": "Select PR templates by fixed file names (FEATURE.md, FIX.md)",
  "version": "1.5.0",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["styles.css"],
      "js": ["script.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "github-16x16.png",
    "32": "github-32x32.png"
  },
  "action": {
    "default_icon": {
      "16": "github-16x16.png",
      "32": "github-32x32.png"
    }
  }
}
